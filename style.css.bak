@media (max-width: 900px) {
	#content-wrapper {
		width:50%;
	}
}

@media (max-width: 700px) {
	#content-wrapper {
		width:60%;
	}
}

@media (max-width: 500px) {
	#content-wrapper {
		width:100%;
	}
}
